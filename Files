Project:
import csv

compromised_users_list = []

with open("passwords.csv") as password_file:
  #print(csv_file.read())
  password_file_dict = csv.DictReader(password_file)
  for row in password_file_dict:
    compromised_users = (row["Username"])
    password_row = row["Password"]
    #print(compromised_users, password_row)
    compromised_users_list.append(compromised_users)

# print("Compromised users:", compromised_users_list)

with open("compromised_users.txt", "w") as compromised_user_file:
  for compromised_user in compromised_users_list:
    compromised_user_file.write(compromised_user + "\n")
  
# with open("compromised_users.txt") as text:
#   print(text.read())

